<div class="container mt-5 mb-5">
  <div style="margin-left: auto;margin-right: auto; width: 25em;">
      <div class ="input-group"  disabled>
        <%= form_with url: rooms_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
              params[:query],
              class: "form-control rounded",
              placeholder: "Where do you want to go?"
          %>
            <%= submit_tag "Chercher", class:"btn btn-outline-primary" %>
        <% end %>
      </div>
  </div>
  <div class = "d-flex justify-content-between align-content-around flex-wrap">
    <% if @rooms.empty? %>
      <h2 class="mt-5 text-center">Sorry, we have no rooms available in <%= @query %> city!</h2>
    <% end %>
    <% @rooms.each do |room|%>
        <div class="card mt-5 index-card" style="width: 18rem;">
          <img class="card-img-top" src="<%=room.image_url%>" alt="Card image cap">
          <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between">
              <h5 class="card-title"><%= room.hotel.name %></h5>
              <div>
                <i class="fa-regular fa-star"></i>
                <%= room.hotel.rating %>
              </div>
            </div>
            <p class="card-text text-limit"><%= room.hotel.address %></p>
            <div class="d-flex justify-content-between">
              <div>
                <i class="fa-solid fa-user"></i>
                <%= room.capacity %>
              </div>
              <div>
                <i class="fa-solid fa-euro-sign"></i>
                <%= room.price_per_night %>
              </div>
            </div>
            <div class="mt-3 text-center">
              <%= link_to "Show room details", room_path(room), class: "btn btn-primary"%>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
