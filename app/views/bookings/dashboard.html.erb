<div class="container mb-5">
  <h1 class = "mt-5">Your bookings</h1>
  <% if @my_bookings.empty? %>
    <p>You don't have any booking pending!</p>
  <% else %>
    <% @my_bookings.each do |booking| %>
      <div class="row mt-5">
        <h3><b>Your stay at <%= booking.room.hotel.name %></b></h3>
        <div class="col-6">
          <div class="card mt-1 index-card" style="width: 100%;">
            <img class="card-img-top" src="<%=booking.room.image_url%>" alt="Card image cap">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between">
                <h5 class="card-title"><%= booking.room.hotel.name %></h5>
                <div>
                  <i class="fa-regular fa-star"></i>
                  <%= booking.room.hotel.rating  %>
                </div>
              </div>
              <p class="card-text text-limit"><%= booking.room.hotel.address %></p>
              <div class="d-flex justify-content-between">
                <div>
                  <i class="fa-solid fa-user"></i>
                  <%= booking.room.capacity %>
                </div>
                <div>
                  <i class="fa-solid fa-euro-sign"></i>
                  <%= booking.room.price_per_night %>
                </div>
              </div>
              <div class = "mt-3 text-center">
                <%= link_to "Show room details", room_path(booking.room), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-6 align-self-center">
          <ul class="list-unstyled">
            <li>
              <h4>Check-in date: <b><%= booking.starts_at %></b> - Check-out date: <b><%= booking.ends_at %></b></h4>
            </li>
            <li>
              <h4>Total price: <b><%= booking.total_price %> â‚¬</b></h4>
            </li>
          </ul>
          <div class="text-center">
            <%= link_to "Cancel this booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
